xontrib load fzf-widgets
$fzf_history_binding = "c-r"
$fzf_ssh_binding = "c-s"      # Ctrl+S
$fzf_file_binding = "c-t"      # Ctrl+T
$fzf_dir_binding = "c-g"      # Ctrl+G

$fzf_find_command = "fd"
$fzf_find_dirs_command = "fd -t d"

# gruvbox colors
$FZF_DEFAULT_OPTS=" --color=bg+:#3c3836,bg:#32302f,spinner:#8ec07c,hl:#83a598 --color=fg:#bdae93,header:#83a598,info:#fabd2f,pointer:#8ec07c --color=marker:#8ec07c,fg+:#ebdbb2,prompt:#fabd2f,hl+:#83a598"
